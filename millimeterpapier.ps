%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 0 0 595 842

/paperwidth 210 def
/paperheight 297 def
/minimumborder 10 def
/netwidth paperwidth minimumborder 2 mul sub 10 idiv 10 mul def
/netheight paperheight minimumborder 2 mul sub 10 idiv 10 mul def

2.835 dup scale %% now mm is the unit

paperwidth netwidth sub 2 div paperheight netheight sub 2 div translate
 
0 .45 1 0 setcmykcolor % Orange

/drawgridlines %% args are <space> <linewidth>
{
    setlinewidth dup
    0 exch netwidth %Vertikale Linien zeichnen
    { 
        dup 
        0 moveto
        netheight lineto
    } for 
    
    0 exch netheight % Horizontale Linien zeichnen
    {
        dup
        0 exch moveto
        netwidth exch lineto
    } for
    
    stroke

} def

.4 % Basis-Linienbreite 

dup setlinewidth
0 0 netwidth netheight rectstroke %Umgebendes Rechteck

2 div dup % Linienbreite halbieren
10 exch drawgridlines % 10mm-Linien
2 div dup % Linienbreite halbieren
5 exch drawgridlines % 5mm-Linien
2 div % Linienbreite halbieren
1 exch drawgridlines % mm-Linien

showpage
